.container.h-100
  .row.h-100
    .col-md-7.bg-light.py-5.d-flex.align-items-center.justify-content-center
      = image_tag 'logo-large.png', alt: 'Logo', width: 150, class: 'img-fluid'
      %span
        %h1.mb-0 Securium
        %h6 where security meets simplicity
    .col-md-5.bg-dark-2.text-light.py-5.px-md-5
      .row.h-100
        .col-md-12.align-self-center
          %h2 Forgot your password?
          = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f|
            = f.error_notification
            .form-inputs
              = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }
            .form-actions.d-flex.justify-content-between.align-items-center
              = f.button :submit, "Send me reset password instructions"

      -# = render "devise/shared/links"
