.container.h-100
  .row.h-100
    .col-md-7.bg-light.py-5.d-flex.align-items-center.justify-content-center
      = image_tag 'logo-large.png', alt: 'Logo', width: 150, class: 'img-fluid'
      %span
        %h1.mb-0 Securium
        %h6 where security meets simplicity
    .col-md-5.align-self-center.bg-dark-2.text-light.py-5.px-md-5
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }
          = f.input :password, required: false, input_html: { autocomplete: "current-password" }
        .form-actions.d-flex.justify-content-between.align-items-center
          = f.button :submit, "Log in"
          = f.input :remember_me, as: :boolean, class: 'mr-2' if devise_mapping.rememberable?

      -# = render "devise/shared/links"